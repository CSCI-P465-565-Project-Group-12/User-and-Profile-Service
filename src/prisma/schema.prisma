datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  role         UserRole
  is_verified  Boolean
  profile      Profile?
  security     Security?
}

model Profile {
  profile_id    String  @id
  user          User    @relation(fields: [userId], references: [id])
  userId        Int
  first_name    String
  last_name     String
  contact_number String
  bio           String?
}

model Security {
  security_id String @id
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  duo_auth_id String
}

enum UserRole {
  Admin
  VenueOwner
  RegularUser
}
