datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model Users {
  id           String      @id 
  email        String   @unique
  username     String   @unique
  password     String
  role         UserRole
  is_verified  Boolean
  profile      Profiles?
  security     Security?
}

model Profiles {
  profile_id    String  @id
  user          Users    @relation(fields: [userId], references: [id])
  userId        String     @unique
  first_name    String
  last_name     String
  contact_number String
  bio           String?
}

model Security {
  security_id String @id
  user        Users   @relation(fields: [userId], references: [id])
  userId      String    @unique
  duo_auth_id String
}

enum UserRole {
  VenueOwner
  RegularUser
}
